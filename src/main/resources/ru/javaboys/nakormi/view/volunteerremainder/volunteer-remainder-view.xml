<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://volunteerRemainderView.title">
    <data>
        <keyValueCollection id="remainderDc">
            <properties>
                <property datatype="string" name="name"/>
                <property datatype="decimal" name="cnt"/>
                <property datatype="string" name="measure"/>
            </properties>
        </keyValueCollection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <dataGrid id="remainderDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="remainderDc">
            <columns>
                <column property="name" header="Наименование"/>
                <column property="cnt" header="Количество корма"/>
                <column property="measure" header="Единица измерения"/>
            </columns>
        </dataGrid>
    </layout>
</view>