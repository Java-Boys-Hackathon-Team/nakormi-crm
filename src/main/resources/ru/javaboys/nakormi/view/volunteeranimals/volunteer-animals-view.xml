<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://volunteerAnimalsView.title">
    <data>
        <collection id="animalDc"
                    class="ru.javaboys.nakormi.entity.Animal">
            <fetchPlan extends="_base">
                <property name="pride">
                    <property name="name"/>
                </property>
            </fetchPlan>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <dataGrid id="animalsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="animalDc"
                  columnReorderingAllowed="true">
            <columns resizable="true">
                <column property="nickname"/>
                <column property="type"/>
                <column property="gender"/>
                <column property="isSterilized"/>
                <column property="description"/>
                <column property="pride.name"/>
            </columns>
        </dataGrid>
    </layout>
</view>